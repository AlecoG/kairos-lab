---
import BaseLayout from "../../layouts/BaseLayout.astro";
const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith("/") ? rawBase : `${rawBase}/`;
const containerClass = "mx-auto w-[min(100%-2rem,1180px)]";
---

<BaseLayout
  title="Panel Admin | Kairos Lab"
  description="Panel administrativo para revisar y editar estado de productos."
  page="admin"
  includeStorefrontScripts={false}
>
  <main id="adminPanel" class="min-h-screen bg-[#f6f6f6] py-10">
    <section class={containerClass}>
      <header class="mb-6 flex flex-wrap items-center justify-between gap-3">
        <div>
          <p class="mb-1 inline-flex rounded-full border border-[#e8e8e8] bg-white px-3 py-1 text-xs font-semibold uppercase tracking-[0.14em] text-[#6b6b6b]">Administrador</p>
          <h1 class="text-3xl font-black">Panel de productos</h1>
        </div>

        <div class="flex flex-wrap gap-2.5">
          <a href={`${base}catalogo/`} class="inline-flex cursor-pointer items-center justify-center gap-2 rounded-xl border border-[#e8e8e8] bg-white px-4 py-3 font-bold text-[#111111] no-underline">Ver catálogo</a>
          <button id="adminLogoutBtn" type="button" class="inline-flex cursor-pointer items-center justify-center gap-2 rounded-xl border border-[#111] bg-[#111] px-4 py-3 font-bold text-white">Cerrar sesión</button>
        </div>
      </header>

      <div id="adminStats" class="mb-6 grid gap-3 sm:grid-cols-2 xl:grid-cols-4"></div>

      <section class="rounded-2xl border border-[#e8e8e8] bg-white p-4 shadow-[0_10px_30px_rgba(0,0,0,.08)]">
        <h2 class="mb-3 text-xl font-black">Productos</h2>
        <div class="overflow-x-auto">
          <table class="w-full min-w-[860px] border-collapse">
            <thead>
              <tr class="bg-[#f8f8f8] text-left text-xs uppercase tracking-wide text-[#6b6b6b]">
                <th class="px-3 py-2">Producto</th>
                <th class="px-3 py-2">Categoría</th>
                <th class="px-3 py-2">Precio</th>
                <th class="px-3 py-2">Visible</th>
                <th class="px-3 py-2">Habilitado</th>
                <th class="px-3 py-2">Stock</th>
                <th class="px-3 py-2 text-right">Acción</th>
              </tr>
            </thead>
            <tbody id="adminProductsTableBody"></tbody>
          </table>
        </div>
      </section>
    </section>

    <div id="editProductModal" class="fixed inset-0 z-40 hidden items-center justify-center bg-black/40 px-4">
      <div class="w-full max-w-xl rounded-2xl border border-[#e8e8e8] bg-white p-5 shadow-[0_20px_45px_rgba(0,0,0,.2)]">
        <div class="mb-4 flex items-center justify-between gap-3">
          <h3 class="text-xl font-black">Editar producto</h3>
          <button id="closeEditModal" type="button" class="rounded-lg border border-[#e8e8e8] px-3 py-2 text-sm font-bold">Cerrar</button>
        </div>

        <form id="editProductForm" class="grid gap-4">
          <input id="editIndex" type="hidden" />

          <label class="grid gap-1.5">
            <span class="text-sm font-bold text-[#6b6b6b]">Nombre</span>
            <input id="editName" class="w-full rounded-xl border border-[#e8e8e8] bg-white px-3.5 py-3 outline-none focus:border-[#bdbdbd] focus:ring-4 focus:ring-black/5" type="text" required />
          </label>

          <div class="grid gap-4 sm:grid-cols-2">
            <label class="grid gap-1.5">
              <span class="text-sm font-bold text-[#6b6b6b]">Categoría</span>
              <input id="editCategory" class="w-full rounded-xl border border-[#e8e8e8] bg-white px-3.5 py-3 outline-none focus:border-[#bdbdbd] focus:ring-4 focus:ring-black/5" type="text" required />
            </label>

            <label class="grid gap-1.5">
              <span class="text-sm font-bold text-[#6b6b6b]">Precio</span>
              <input id="editPrice" class="w-full rounded-xl border border-[#e8e8e8] bg-white px-3.5 py-3 outline-none focus:border-[#bdbdbd] focus:ring-4 focus:ring-black/5" type="text" required />
            </label>
          </div>

          <label class="grid gap-1.5">
            <span class="text-sm font-bold text-[#6b6b6b]">Estado de stock</span>
            <select id="editStockStatus" class="w-full rounded-xl border border-[#e8e8e8] bg-white px-3.5 py-3 outline-none focus:border-[#bdbdbd] focus:ring-4 focus:ring-black/5">
              <option value="disponible">Disponible</option>
              <option value="agotado">Agotado</option>
            </select>
          </label>

          <div class="grid gap-2 sm:grid-cols-2">
            <label class="inline-flex items-center gap-2 text-sm font-semibold">
              <input id="editVisible" type="checkbox" class="h-4 w-4" />
              Visible en catálogo
            </label>
            <label class="inline-flex items-center gap-2 text-sm font-semibold">
              <input id="editEnabled" type="checkbox" class="h-4 w-4" />
              Producto habilitado
            </label>
          </div>

          <button type="submit" class="inline-flex cursor-pointer items-center justify-center gap-2 rounded-xl border border-[#111] bg-[#111] px-4 py-3 font-bold text-white">Guardar cambios</button>
        </form>
      </div>
    </div>
  </main>

  <script src={`${base}products-data.js`}></script>
  <script src={`${base}product-store.js`}></script>
  <script src={`${base}admin.js`}></script>
</BaseLayout>
