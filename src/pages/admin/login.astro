---
import BaseLayout from "../../layouts/BaseLayout.astro";
const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith("/") ? rawBase : `${rawBase}/`;
const containerClass = "mx-auto w-[min(100%-2rem,980px)]";
---

<BaseLayout
  title="Admin Login | Kairos Lab"
  description="Acceso al panel administrativo de productos de Kairos Lab."
  page="admin"
  includeStorefrontScripts={false}
>
  <main class="min-h-screen bg-[#f6f6f6] py-14">
    <section class={containerClass}>
      <div class="mx-auto max-w-md rounded-2xl border border-[#e8e8e8] bg-white p-6 shadow-[0_10px_30px_rgba(0,0,0,.08)]">
        <p class="mb-2 inline-flex rounded-full border border-[#e8e8e8] bg-white px-3 py-1 text-xs font-semibold uppercase tracking-[0.14em] text-[#6b6b6b]">Panel admin</p>
        <h1 class="mb-2 text-3xl font-black">Iniciar sesión</h1>
        <p class="mb-6 text-sm text-[#6b6b6b]">Ingresa para gestionar visibilidad y estado de productos.</p>

        <form id="adminLoginForm" class="grid gap-4">
          <label class="grid gap-1.5">
            <span class="text-sm font-bold text-[#6b6b6b]">Usuario</span>
            <input id="adminUser" class="w-full rounded-xl border border-[#e8e8e8] bg-white px-3.5 py-3 outline-none focus:border-[#bdbdbd] focus:ring-4 focus:ring-black/5" type="text" autocomplete="username" required />
          </label>

          <label class="grid gap-1.5">
            <span class="text-sm font-bold text-[#6b6b6b]">Contraseña</span>
            <input id="adminPass" class="w-full rounded-xl border border-[#e8e8e8] bg-white px-3.5 py-3 outline-none focus:border-[#bdbdbd] focus:ring-4 focus:ring-black/5" type="password" autocomplete="current-password" required />
          </label>

          <p id="adminLoginError" class="hidden rounded-xl border border-red-200 bg-red-50 px-3 py-2 text-sm font-semibold text-red-700"></p>

          <button type="submit" class="inline-flex cursor-pointer items-center justify-center gap-2 rounded-xl border border-[#111] bg-[#111] px-4 py-3 font-bold text-white">Entrar al panel</button>
        </form>

        <p class="mt-5 text-xs text-[#6b6b6b]">Credenciales demo: <code>admin</code> / <code>kairos123</code>.</p>
        <a href={base} class="mt-4 inline-block text-sm font-semibold text-[#6b6b6b] hover:text-[#111111]">Volver al sitio</a>
      </div>
    </section>
  </main>

  <script src={`${base}products-data.js`}></script>
  <script src={`${base}product-store.js`}></script>
  <script src={`${base}admin.js`}></script>
</BaseLayout>
